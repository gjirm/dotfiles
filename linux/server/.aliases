alias l="ls -lF"
alias ll="ls -laF"
alias ld="ls -ld */"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

alias tmux="tmux -u"

function fcd() {
    cd $(fd -HI -t d $@ . | fzf)
}

function mcd () {
    mkdir -p $1
    cd $1
}

# Editor
function fed() { 
    micro $(fd -HI -t f $@ . | fzf) 
}

# Git
function gitpush () {
    git add .
    git commit -m "$*"
    git pull
    git push
}

